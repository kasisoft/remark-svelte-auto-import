{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": false,
        "module": "ES2022",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "bundler",
        "baseUrl": "./",
        "paths": {
            "$main/*": [
                "src/main/*"
            ],
            "$test/*": [
                "src/test/*"
            ]
        },
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
